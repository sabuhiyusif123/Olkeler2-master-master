<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/olke"
        android:id="@+id/olke"
        android:paddingRight="40dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/olke_adi"
        android:paddingLeft="170dp"
        android:text="@string/olke_adi"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/olke"
        android:layout_alignBottom="@+id/olke"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/paytaxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/olke"
        android:layout_alignLeft="@+id/olke"
        android:layout_alignStart="@+id/olke"
        android:layout_marginTop="51dp"
        android:id="@+id/paytaxt" />

    <TextView
        android:text="@string/paytaxt_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/paytaxt"
        android:layout_alignRight="@+id/olke_adi"
        android:layout_alignEnd="@+id/olke_adi"
        android:id="@+id/paytaxtAdi" />
</RelativeLayout>

